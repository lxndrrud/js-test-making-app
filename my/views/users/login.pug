extends ../layout 
block content
    .container-lg
        div(class="row justify-content-center align-items-center")
            .col-4
                form(action="/users/login", method="post" class="my-form") 
                    p
                        // for ищет id, но его нет
                        label(for="login" class="form-label") Логин
                    p
                        // Сначала аттрибуты, потом все остальное, т.е. скобки в начале
                        input(type="text", name="login" class="form-control")#name
                    p 
                        label(for="password" class="form-label") Пароль
                    p
                        input#password(type="password", name="password" class="form-control")
                    p
                        button(type="submit" class="btn my-link-confirm my-form-link") Вход

