extends adminLayout 

block content
    .container-lg
        div(class="row justify-content-center align-items-center")
            .col-4 
                form(action="/admin/user/edit/"+userInfo.login, method="post", class="my-form") 
                    p
                        label(for="login", class="form-label") Логин
                    p
                        input#login(type="text", name="login", value=userInfo.login, class="form-control")
                    p 
                        label(for="password", class="form-label") Пароль
                    p
                        input#password(type="password", name="password", class="form-control")
                    p 
                        label(for="name", class="form-label") Имя
                    p
                        input#name(type="text", name="name", value=userInfo.name, class="form-control")
                    p 
                        label(for="surname", class="form-label") Фамилия
                    p 
                        input#surname(type="text", name="surname", value=userInfo.surname, class="form-control")  
                    p 
                        label(for="role_title", class="form-label") Идентификатор роли
                    p 
                        select(class="form-select")
                            if userInfo.role_title == 'Administrator'
                                option(value="Administrator", checked) Администратор
                                option(value="Operator") Оператор
                            else if userInfo.role_title == 'Operator'
                                option(value="Administrator") Администратор
                                option(value="Operator", checked) Оператор
                    p
                        button(type="submit", class="btn my-link-confirm my-form-link") Редактировать пользователя

